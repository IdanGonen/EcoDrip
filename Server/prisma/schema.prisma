generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Map {
  map_key String  @id @default(cuid())
  base64  String
  height  Double
  width   Double
  user    User?   @relation(fields: [userId], references: [id])
  userId  String?
}

model User {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  maps      Map[]

  @@map("users")
}
